.toolbar
    height 60px
    background-color cyan
    width 100%
    float left
    line-height 57px
    padding-right 25px
    white-space no-wrap
    .nav
        display inline-block
        vertical-align middle
        position relative
        top 2px
        &__item
            position relative
            display inline-block
            text-transform uppercase
            vertical-align middle
            font-size 20px
            line-height 1
            cursor pointer
            color white
            margin-left 25px
            font-weight 200
            t all
            & + .nav__item:before
                content ""
                width 1px
                height 15px
                background-color alpha(white, .5)
                position absolute
                left -15px
                top 2px
            &:hover
                color red
    .code
        display inline-block
        position relative
        margin-left 15px
        top 1px
        &__button
            background: cyan
            border 0
            size 19px 19px
            border-radius 19px
            right 3px
            top 19px
            box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.3);
            position absolute
            color white
            font-weight bold
            line-height 1.24
            t all
            &:hover
                background-color red
        &__input
            line-height initial
            font-size 12px
            width 165px
            height 25px
            display inline-block
            vertical-align middle
            border 0
            padding 2px 25px 0 12px
            background-image: linear-gradient(90deg, #083476 0%, #0A4E93 50%, #339FDA 100%);
            box-shadow: inset 0px 2px 5px 0px rgba(0,0,0,0.37);
            border-radius: 24px
            color white
            placeholder(color white, font-weight 200)
    .profile
        size 40px 40px
        position relative
        display inline-block
        margin-left 17px
        &__picture
            display inline-block
            vertical-align middle
            size 40px 40px
            border 2px solid white
            background-size cover
            border-radius 8px
        &__badge
            background-image: linear-gradient(45deg, #EE1350 0%, #AC0835 100%)
            box-shadow: inset 0px 1px 3px 0px rgba(0,0,0,0.3)
            size 18px 18px
            color white
            border-radius 18px
            line-height 20px
            text-align center
            font-size 11px
            position absolute
            top 5px
            right -9px
    .logo
        display inline-block
        width 192px
        height 60px
        background url("/layout/images/logo.png") top right no-repeat

    svg, a
        vertical-align middle
