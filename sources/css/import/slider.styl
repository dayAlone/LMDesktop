.slider
    &:after
        position absolute
        bottom 0px
        left 0
        z-index 1000
        background-image: linear-gradient(0deg, #1FB9E2 0%, rgba(31,183,225,0.50) 50%, rgba(31,183,225,0.00) 100%);
        width 100%
        content ""
        height 123px
    &__arrow
        position absolute
        z-index 100
        top 50%
        margin-top -80px
        opacity .3
        &:hover
            opacity 1
        &--left
            left 30px
        &--right
            right 30px
    &__content
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        z-index: 20
    &__picture
        position: absolute
        top: 0
        width: 100vw
        height: 100%
        background: no-repeat 50% 50%
        background-size: cover
        transition: opacity .5s cubic-bezier(.215, .61, .355, 1)

    &--right
        .slider__item--active .slider__bg, .slider__item--active .slider__picture
            left 0
            right auto
        .slider__bg, .slider__picture
            right 0
            left auto
    &--left
        .slider__item--active .slider__bg, .slider__item--active .slider__picture
            right 0
            left auto
        .slider__bg, .slider__picture
            left 0
            right auto
    &__bg
        position: absolute
        overflow: hidden
        top: 0
        height: 100%
        width: 0
        display: block
        transition: width .5s cubic-bezier(.45, .035, .045, .95)
        transition-delay .2s
    &__item
        opacity 1
        &--active
            .slider__bg
                z-index 10
                width 100%
                transition-delay 0s
    &
        position relative
        min-height 463px
        height calc(100vh - 258px)
        background blue
        full-width()
        overflow hidden !important
