.footer
    font-family 'Helvetica Neue', 'Arial'
    font-size 10px
    color white
    position relative
    z-index 20
    t opacity
    transition-duration .15s
    &--delay
        transition-delay .3s
    full-width()
    img
        margin-bottom 60px
    a
        color white
        border-line(alpha(@color, .5))
        &:hover
            color blue
            border-line(alpha(@color, .5))
    .open &, &--hidden
        opacity 0
    &__attention
        width 100%
        position fixed
        z-index 1002
        bottom 0
        height 90px
        background-color white
        opacity .75
        line-height 90px
        text-align center
        padding 0 30px
        svg
            max-width 100%
            vertical-align middle
            display inline-block
