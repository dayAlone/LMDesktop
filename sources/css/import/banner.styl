.banner
    width 100%
    height 220px
    position relative
    overflow hidden
    display inline-block
    text-align left
    -webkit-font-smoothing: antialiased
    color white
    margin-bottom 10px
    max-width 245px
    &:hover
        color white
    *
        position relative
        z-index 1

    &--article
        .banner__image
            height 50%
    &__tools
        bottom 10px
        padding 0 12px
        position absolute
        font-size 12px
        font-family 'Helvetica Neue', 'Arial'
        svg
            vertical-align middle
            display baseline
            margin-right 3px
        span
            margin-right 20px
            &:first-of-type
                svg
                    top -2px

    &__text
        font-size 18px
        line-height 1
        padding 13px 5px 0 10px
    &__content
        background-image: linear-gradient(90deg, #083476 0%, #0A4E93 50%, #339FDA 100%);
        position absolute
        width 100%
        bottom 0
        left 0
        height 51%
    &__image
        z-index 0
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        background-size cover
        t all
        background-position center center
