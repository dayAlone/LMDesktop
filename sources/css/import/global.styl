html, body
	height 100%
body
	font-family 'LMDin', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	color white
	font-variant: normal
	background #0a2a52
	box-shadow: inset -19px 0px 181px 2px rgba(0,0,0,0.50);
	t width
	&.action
		overflow hidden
		perspective: 1500px;


a
	t all

svg
	t fill
	path, g
		t fill
img
	&.left
		float left
		margin 3px 20px 20px 0
.container
	max-width 1010px

.page
	position relative
	full-width()

.wrap
	background-color cyan
	perspective: 1000px
	transform-style: preserve-3d;
	transform-origin: 100% 50%;
	t all
	.action &
		overflow hidden
	.open &

		pointer-events none
		height 100%
		transform: translate3d(100px, 0, -300px) rotateY(-20deg);

.wrap
	full-width()
	min-height 100%
	padding-bottom 155px
	margin-bottom -155px
	position relative

	&:after
		content ""
		display block
