.sidebar
    opacity 0
    position fixed
    height 100%
    width 310px
    padding 30px 20px
    t all
    pointer-events none
    z-index -1
    overflow hidden
    -webkit-overflow-scrolling: touch;
    &__content
        min-height 670px
    &__close
        margin-bottom 20px
        display inline-block
        svg path
            t all
        &:hover
            svg path
                fill red
    .open &
        opacity 1
        z-index 1000
        pointer-events all
    .nav
        float left
        &__title
            text-transform uppercase
            full-width()
            font-weight bold
            font-size 16px
            border-bottom 1px solid alpha(white, 1)
            line-height 1.7
        &__item
            full-width()
            color white
            border-bottom 1px solid alpha(white, .2)
            line-height 2
            padding-top 3px
            &:hover
                color red
            & + .nav__title
                margin-top 20px
